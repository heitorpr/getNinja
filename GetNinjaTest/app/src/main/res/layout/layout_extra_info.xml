<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_extra_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_error_green_24dp" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/font_style.bold"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_extra_info"
        android:text="Qual será o tipo de comida?" />

    <TextView
        android:id="@+id/txt_extra_info"
        style="@style/font_style.light"
        android:layout_below="@+id/txt_title"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_extra_info"
        android:text="Salgadinhos (coxinhas, kibes, risóles, etc)" />
</RelativeLayout>