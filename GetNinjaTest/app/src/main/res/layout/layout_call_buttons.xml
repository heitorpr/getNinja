<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/btn_telephone"
        style="@style/font_style.button_white"
        android:drawableLeft="@drawable/ic_call_blue_24dp"
        android:drawableStart="@drawable/ic_call_blue_24dp"
        android:text="@string/action_call" />

    <View
        style="@style/view_separator.vertical.blue"
        android:layout_width="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/btn_whatsapp"
        style="@style/font_style.button_white"
        android:drawableLeft="@drawable/whatsapp_blue_24dp"
        android:drawableStart="@drawable/whatsapp_blue_24dp"
        android:text="@string/action_whatsapp" />
</LinearLayout>